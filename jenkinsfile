pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', 
                          branches: [[name: '*/master']],
                          doGenerateSubmoduleConfigurations: false, 
                          extensions: [], 
                          submoduleCfg: [], 
                          userRemoteConfigs: [[url: 'https://github.com/your/repository.git']]
                ])
            }
        }
        
        stage('Save Repository Content') {
            steps {
                sh 'cp -r . /path/to/save/location' // Replace /path/to/save/location with the desired location to save the repository content
            }
        }
    }
}
